<:assign key="buttonWidth" value="{=.8 * $ppi}"/>
<:assign key="buttonHeight" value="{=.35 * $ppi}"/>

<dialogsize id="optionsDialog" title="Options" titlealign="center" style="dialog" movable="false" onecolumn="true">
    <textbutton style="blue" onclick="export" width="{buttonWidth}" height="{buttonHeight}">Export</textbutton>
    <textbutton style="blue" onclick="openRenameVenueDialog" width="{buttonWidth}" height="{buttonHeight}">Rename</textbutton>
    <textbutton style="blue" onclick="openHelpDialog" width="{buttonWidth}" height="{buttonHeight}">Help</textbutton>
    <textbutton style="blue" onclick="navigateToMainMenu" width="{buttonWidth}" height="{buttonHeight}">Main Menu</textbutton>
</dialogsize>